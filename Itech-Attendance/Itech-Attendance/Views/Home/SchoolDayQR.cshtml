@{
}

@model SchoolDay

<div class="text-center">
    <form method="post" asp-action="GenerateNewQR">
        <br />
        <br />
        <h4>@Model.Date</h4>
        <br />
        <br />
        <img src="@Model.QrCode" alt="QR Code" style="width: 300px; height: 300px; display: @(string.IsNullOrEmpty(Model.QrCode) ? "none" : "")" />
        <br />
        <br />
        <button class="qrCodeButton">Neuer QR-Code</button>
    </form>
</div>
